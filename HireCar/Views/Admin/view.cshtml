@model HireCar.Models.UserVm

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>User Details</h2>
    <hr />
    <div class="row">
      

            <div class="col-md-8">
                <dl class="dl-horizontal">
                    <dt>
                        <strong>Name</strong>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        <strong>Address</strong>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dt>
                        <strong>Contact Number</strong>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ContectNumber)
                    </dd>

                    <dt>
                        <strong>Gender</strong>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Gender)
                    </dd>        
                </dl>
            </div>
            <div class="col-md-4">
                <dt>
                    <strong style="margin-left:55px;">Profile Image</strong>
                </dt>
                <dd>
                    <img src="@Model.ProfileImage" alt="Profile Image" class="img-thumbnail" style="max-height: 150px; max-width:200px;" />
                </dd>
            </div>
        </div>
        </div>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
                <button style="background-color: crimson; height: 41px; border-radius: 8px;"> @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" }) </button>  
            </p>
        </div>
    </div>
</div>

<style>

    .container {
        max-width: 80%;
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
        background-color: cadetblue;

        box-shadow: 5px 15px 10px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

   
    .col-md-6 {
        width: 50%;
        float: left;
        padding: 10px;
    }

  
    .img-thumbnail {
        max-width: 200px;
        display: block;
        margin: auto;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        width: 130px;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

   
</style>
