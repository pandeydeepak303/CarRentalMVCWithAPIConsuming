@model HireCar.Models.LoginVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
  
    <link href="~/AdminContent/css/StyleSheet1.css" rel="stylesheet" />
    <title>Login</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-container">
        <h4>Login</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label">
                @Html.DisplayNameFor(model => model.UserName)
                <span style=" color:red;" class="required">*</span>
            </label>
            <div>
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">
                @Html.DisplayNameFor(model => model.PassWord)
                <span style="color:red;" class="required">*</span>
            </label>

            <div>
                @Html.PasswordFor(model => model.PassWord, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div>
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    </div>
    } 
    }
    <div class="loop-wrapper">
        <div class="mountain"></div>
        <div class="hill"></div>
        <div class="tree"></div>
        <div class="tree"></div>
        <div class="tree"></div>
        <div class="rock"></div>
        <div class="truck"></div>
        <div class="wheels"></div>
    </div>

    <div class="back-link">
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>

</html>




